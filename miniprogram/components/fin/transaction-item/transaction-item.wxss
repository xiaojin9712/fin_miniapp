.transaction__item {
  display: flex;
  font-weight: 200;
  font-size: 24rpx;
  margin-bottom: 24rpx;
  padding: 24rpx 32rpx;
  border-radius: 32rpx;
  background-color: #fff;
  align-items: center;
}
.transaction__item__active {
  background-color: var(--secondary-color);
  color: #fff;
}
.type__icon {
  width: 88rpx;
  height: 88rpx;
  background-color: var(--primary-color);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 24rpx;
}
.type__icon .image {
  width: 48rpx;
  height: 48rpx;
}
.type__amount {
  font-size: 40rpx;
  font-weight: 200;
  color: var(--primary-color);
}
.type__info {
  margin-left: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: space-between;
  flex: 1;
}
.type__info .label {
  font-weight: 400;
  font-size: 28rpx;
}
