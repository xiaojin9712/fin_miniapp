/* miniprogram/pages/home/home.wxss */
.home__wrapper {
  background-color: #120F2A;
  height: 100vh;
}

.search__wrapper {
  padding: 56rpx 40rpx ;
}
.search {
  background-color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.section__title {
  font-size: 40rpx;
  color: #fff;
  font-weight: 500;
  padding-left: 40rpx;
  margin-bottom: 56rpx;
}

.section__wrapper {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 40rpx;
  margin-bottom: 56rpx;
  padding: 0 40rpx;
}
.item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  height: 216rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #120F2A;
}
.item:nth-of-type(1) {
  background-color: #EBD0B1;
}
.item:nth-of-type(2) {
  background-color: #F8E4F2;
}
.item:nth-of-type(3) {
  background-color: #E3E3E3;
}
.item:nth-of-type(4) {
  background-color: #B2F1D9;
}
